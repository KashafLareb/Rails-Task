<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<div class="p-5 container bg-dark rounded-pill border border-5 border-secondary rounded text-secondary pb-5">
  <h1 class="p-5 container border border-5 bg-light rounded-pill text-center">Authors (📔✍)</h1>

  <ol>
    <% @authors.each do |author| %>
      <li class="m-3 container border rounded-pill bg-light rounded">
          <strong><%= author.name %></strong>
          <%= link_to "\nshow", author %>
      </li>
    <% end %>
  </ol><hr>

  <button class = "rounded-pill btn btn-dark btn-outline-light"><%= link_to "Add New Author", new_author_path %></button>
  <br><hr>
  <br><br><br>
</div>
